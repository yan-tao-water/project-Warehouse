#define CLEAR()               \
    while (getchar() != '\n') \
        ;
#define CON_ENTER()               \
    do                            \
    {                             \
        printf("\n\n回车继续\n"); \
        while (getchar() != '\n') \
            ;                     \
    } while (0)
